<td style="">
    <input disabled="@CellInstance.Unchangeable" type="@(CellInstance.InputType??"text")" value="@CellInstance.Value" @onchange="@((x) => { CellInstance.Value = x.Value.ToString();
                                                                                         OnValueChange.Invoke(new ValueChangeEventArgs(X, Y, CellInstance.Value)); })"/>
</td>
@code {
    [Parameter]
    public ICell CellInstance { get; set; }
    [Parameter]
    public int X { get; set; }
    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public Action<ValueChangeEventArgs> OnValueChange { get; set; }
}
